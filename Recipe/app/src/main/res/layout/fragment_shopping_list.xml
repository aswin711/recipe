<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.example.cedex.recipe.ui.shoppinglist.ShoppingListFragment">


    <ImageView
        android:id="@+id/img_announcement"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:src="@drawable/ic_announcement"
        android:tint="@color/backgroundGrey"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listview_shopping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/nofavourites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/backgroundGrey"
        android:text="You donot have any list yet!"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/img_announcement"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
