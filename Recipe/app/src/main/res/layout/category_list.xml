<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/OverLaytBlack"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="false"
        app:cardPreventCornerOverlap="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/category_img"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/bg_cat1"
                android:scaleType="fitXY"
                android:tint="@color/OverLaytBlack"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                 />


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/logo_landing"
                android:layout_marginTop="143dp"
                android:layout_toLeftOf="@+id/category_count"


               />



            <TextView
                android:id="@+id/category_name"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Category"
                android:textColor="#fff"
                android:textSize="35dp"

                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/category_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recipes"
                android:textColor="#fff"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:paddingTop="50dp"
                android:paddingLeft="5dp"

                 />

        </RelativeLayout>





    </android.support.v7.widget.CardView>



</RelativeLayout>