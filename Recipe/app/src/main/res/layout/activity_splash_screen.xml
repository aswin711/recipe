<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baseColorTransparent"
    tools:context="com.example.cedex.recipe.ui.splash.SplashScreenActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/splashName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/splash_logo"
            android:layout_toRightOf="@+id/splash_logo"
            android:text="let's"
            android:textColor="#fff"
            android:textSize="50dp" />

        <ImageView
            android:id="@+id/splash_logo"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:src="@drawable/app_icon"

            />

        <TextView
            android:id="@+id/splashName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/splashName2"
            android:layout_alignBottom="@+id/splashName2"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/splashName2"
            android:layout_toRightOf="@+id/splashName2"
            android:text="COOK"
            android:textColor="#fff"
            android:textSize="50dp"
            android:textStyle="bold" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
